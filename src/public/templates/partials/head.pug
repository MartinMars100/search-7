doctype html
html
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
    meta(http-equiv='x-ua-compatible', content='ie=edge')
    // title Search Therapy
    // bootstrap css
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/css/bootstrap.min.css', integrity='sha384-rwoIResjU2yc3z8GV/NPeZWAv56rSmLldC3R/AZzGRnGxQQKnKkoFVhFQhNUwEyJ', crossorigin='anonymous')
    link(rel='stylesheet', href='/static/css/custom.css')
  // navbar - change the if 10 > 1 to admin in production
  nav.navbar.navbar-toggleable-md.navbar-inverse.bg-primary
    .container
      ul.navbar-nav.mr-auto
        li.nav-item
          a.nav-link(href='/') Home
        li.nav-item
          a.nav-link(href='/twitter') Twitter
        // change the if below to admin in production - if admin
        if 10 > 1
          li.nav-item
            a.nav-link(href='/therapies/list') Therapy List
          li.nav-item
              a.nav-link(href='/users/list') User List
        if !currentUser && environment==='production'
            a.btn(href='/register') Sign Up
        if currentUser
          div
            img.avatar.img-circle.hidden-xs-down(src='/static/img/avatar.png')
            a.btn(href='/logout') Log Out
        else
          if environment === 'production'
            a.btn(href='/login') Log In
      a.navbar-brand.pull-sm-right.m-r-0.hidden-xs-down(href='http://www.teamtreehouse.com') Presented By SearchFire
  // /navbar
  

extends ./partials/head

block content
  .jumbotron.jumbotron-fluid.bg-info.text-black
    .container.text-sm-center.pt-3
      h1.display-2 Search Therapy
      h2.lead Find Body Therapy in the Lake Norman Area.
  // /jumbotron
  .padding-wrapper
    .row
      .col-md-12.services-wrap
        .therapy-services-card
          img.avatar.img-circle.hidden-xs-down(src='/static/img/twitter.bird.jpg') 
          a.btn#tweetHash @SearchTherapy
          h1#tweetHead1 Recent Tweets
          each tweet in tweets
            li#tweetDate #{tweet.created_at.slice(0,11)} 
              h4#tweetText #{tweet.text}